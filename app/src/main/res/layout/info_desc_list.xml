        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/line" />

    <TextView
        android:id="@+id/txtInfoName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="12dp"
        android:text="saadasd"
        android:textAlignment="textStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/txtInfoDessc"
        app:layout_constraintStart_toEndOf="@+id/iconImage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtInfoDessc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="AdÄ±"
        android:textAlignment="textStart"
        app:layout_constraintBottom_toBottomOf="@+id/iconImage"
        app:layout_constraintStart_toEndOf="@+id/txtInfoName"
        app:layout_constraintTop_toTopOf="@+id/iconImage" />

</androidx.constraintlayout.widget.ConstraintLayout>